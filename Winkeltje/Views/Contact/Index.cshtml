@model ContactViewModel

@{
    ViewBag.Title = "Contact";
    Layout = "_Layout";
}

<h2>Contact</h2>
<p>Vragen of opmerkingen? Via dit formulier kan u ons bereiken!</p>
<br/>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
<div>
    <div class="col-md-6">
        <div>
            @if (ViewBag.Message == null)
            {
                <div>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Naam">Naam</label>
                            <input asp-for="Naam" class="form-control"/>
                            <span asp-validation-for="Naam"

                                  class="text-muted">
                            </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">E-mail adres</label>
                            <input asp-for="Email" class="form-control"/>
                            <span asp-validation-for="Email"

                                  class="text-muted">
                            </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bericht">Bericht</label>
                            <textarea rows="5" cols="125" 

                            asp-for="Bericht" class="form-control"></textarea>
                            <span asp-validation-for="Bericht"

                                  class="text-muted">
                            </span>
                        </div>
                        <div>
                            <button type="submit"

                                    class="btn btn-dark">
                                Verstuur
                            </button>
                        </div>

                    </form>
                </div>
            }
        </div>

        <div>
            <div>
                @if (ViewBag.Message != null)
                {
                    <div>@ViewBag.Message</div>
                }
            </div>
        </div>
    </div>

</div>