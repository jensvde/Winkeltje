@model List<Domain.HomeImage>
@using Domain
@{
    ViewData["Title"] = "Startpagina";
}

<div class="text-center">
    <h1 class="display-4">'t Winkeltje</h1>
    <p>Welkom op de website van 't Winkeltje Nijlen</p>
</div>
<br />
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @{ 
            foreach (HomeImage image in Model)
            {
                if (image.HomeImageId == 1)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@image.HomeImageId"></li>
                }
            }
        }
    </ol>
    <div class="carousel-inner">
        @{
            foreach (HomeImage image in Model)
            {
                if (image.HomeImageId == 1)
                {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@Url.Action("getImg", "Home", new {id = image.HomeImageId})" alt="@image.Text">
                </div>
                }
                else
                {
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Url.Action("getImg", "Home", new {id = image.HomeImageId})" alt="@image.Text">
                </div>
                }
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Vorige</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Volgende</span>
    </a>
</div>